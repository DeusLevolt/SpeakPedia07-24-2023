<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundrectangle"
    android:id="@+id/game_finished">
    <TextView
        android:id="@+id/good_job"
        android:layout_width="349dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="399dp"
        android:text="@string/good_job"
        android:textAppearance="@style/good_job"
        android:lineSpacingExtra="-4sp"
        android:gravity="center_horizontal|center_vertical"/>
    <View
        android:layout_width="317dp"
        android:layout_height="175dp"
        android:background="@drawable/game_finished_crown"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"/>
    <Button
        android:layout_width="124dp"
        android:layout_height="40dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="550dp"
        android:backgroundTint="@color/pink"
        android:text="retry"
        android:textSize="15sp"/>

</RelativeLayout>