<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundrectangle">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/game_icon"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp">
    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/game_vector_icon"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="60dp">
    </ImageView>

    <TextView
        android:id="@+id/come_and_ha"
        android:layout_width="322dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="280dp"
        android:text="@string/come_and_ha"
        android:textAppearance="@style/come_and_ha"
        android:lineSpacingExtra="1sp"
        android:gravity="center_horizontal|center_vertical"/>

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="302dp"
        android:layout_height="68dp"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/start_button">
    </View>

    <TextView
        android:id="@+id/start_button_game"
        android:layout_width="302dp"
        android:layout_height="68dp"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="30dp"
        android:text="@string/start"
        android:textStyle="bold"
        android:textAppearance="@style/start"
        android:gravity="center"
        android:clickable="true"/>

</RelativeLayout>